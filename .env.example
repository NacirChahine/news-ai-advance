# Django Configuration
SECRET_KEY=your-secret-key-here
# IMPORTANT: Set DJANGO_DEBUG=True for local development
# This enables proper static file serving and debug features
DJANGO_DEBUG=True

ALLOWED_HOSTS=https://newsadvance.pythonanywhere.com,newsadvance.pythonanywhere.com,www.newsadvance.pythonanywhere.com,127.0.0.1

# Email Configuration (Optional - for password reset functionality)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Ollama Configuration
# OLLAMA_ENDPOINT is used for text generation (/api/generate)
OLLAMA_ENDPOINT=http://localhost:11434/api/generate
# OLLAMA_BASE_URL is used to construct the embedding endpoint (/api/embed)
OLLAMA_BASE_URL=http://localhost:11434

# ML Models Configuration
USE_ML_SUMMARIZATION=True

# RAG and Web Search Configuration (for fact-checking)
ENABLE_RAG=True
ENABLE_WEB_SEARCH=True

# Google Custom Search API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Get your Search Engine ID (cx) from: https://programmablesearchengine.google.com/
WEB_SEARCH_API_KEY=your-google-api-key-here
WEB_SEARCH_CX=your-custom-search-engine-id-here
WEB_SEARCH_PROVIDER=google